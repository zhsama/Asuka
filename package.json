{
  "name": "@asuka/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "dev:main": "turbo run dev --filter=@asuka/main",
    "dev:blog": "turbo run dev --filter=@asuka/blog",
    "build:main": "turbo run build --filter=@asuka/main",
    "build:blog": "turbo run build --filter=@asuka/blog",
    "prepare": "husky",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck"
  },
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "apps/blog/**/*.{js,jsx,ts,tsx,astro}": [
      "biome check --write --files-ignore-unknown=true"
    ],
    "apps/main/**/*.{js,jsx,ts,tsx,astro}": [
      "biome check --write --files-ignore-unknown=true"
    ],
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --files-ignore-unknown=true"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.1",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/vite": "^4.1.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.1.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.3.3"
  }
}
