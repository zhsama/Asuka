{
  "name": "@asuka/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "preview": "pnpm --parallel run preview",
    "dev:main": "pnpm --filter @asuka/main run dev",
    "dev:blog": "pnpm --filter @asuka/blog run dev",
    "build:main": "pnpm --filter @asuka/main run build",
    "build:blog": "pnpm --filter @asuka/blog run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0"
  }
}
