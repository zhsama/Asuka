  }

  .nav-link:hover::before {
    @apply w-1;
  }

  .nav-link.active {
    @apply text-[var(--primary)] bg-[var(--primary)]/20;
    text-shadow: 0 0 8px var(--primary);
  }

  .nav-link.active::before {
    @apply w-1;
  }

  .nav-icon {
    @apply text-lg flex-shrink-0;
