---
import Layout from "../layouts/MainLayout.astro";
import { getTranslation } from "@/i18n/translation";
import type { Locale } from "@/i18n/translation";
import AsukaConfig from "~/asuka.config";

const locale = AsukaConfig.locale as Locale;
---

<Layout 
  title={`关于我 | ${AsukaConfig.title}`}
>
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="space-y-12">
        <!-- Timeline -->
        <section class="timeline-section">
          <h2 class="section-title">个人经历</h2>
          <div class="timeline">
            <div class="timeline-item">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-date">2024</div>
                <h3 class="timeline-title">创建个人博客</h3>
                <p class="timeline-description">
                  使用 Astro 搭建个人博客，记录技术学习和生活感悟
                </p>
              </div>
            </div>
            
            <div class="timeline-item">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-date">2023</div>
                <h3 class="timeline-title">深入全栈开发</h3>
                <p class="timeline-description">
                  学习现代全栈开发技术栈，专注于用户体验和性能优化
                </p>
              </div>
            </div>
            
            <div class="timeline-item">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-date">2022</div>
                <h3 class="timeline-title">开始前端开发</h3>
                <p class="timeline-description">
                  接触 React 和现代前端开发，对用户界面设计产生浓厚兴趣
                </p>
              </div>
            </div>
            
            <div class="timeline-item">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-date">2021</div>
                <h3 class="timeline-title">编程启蒙</h3>
                <p class="timeline-description">
                  开始学习编程，从 Python 入门，逐步探索计算机科学的奥秘
                </p>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</Layout>

<style>
  @reference "tailwindcss";

  .container {
    @apply max-w-7xl;
  }

  .page-title {
    @apply text-4xl font-bold mb-4;
    color: var(--text-color);
  }

  .section-title {
    @apply text-2xl font-bold mb-8 text-center;
    color: var(--text-color);
  }

  /* Author Section */
  .author-section {
    @apply text-center;
  }

  .author-card {
    @apply rounded-2xl shadow-sm border p-8;
    background-color: var(--card-color);
    border-color: var(--primary-color-lighten);
  }

  .author-avatar {
    @apply relative inline-block mb-6;
  }

  .avatar-image {
    @apply w-32 h-32 rounded-full object-cover ring-4;
    ring-color: var(--primary-color-lighten);
  }

  .avatar-decoration {
    @apply absolute -bottom-2 -right-2 w-8 h-8 bg-green-400 rounded-full border-4;
    border-color: var(--background-color);
  }

  .author-name {
    @apply text-3xl font-bold mb-2;
    color: var(--text-color);
  }

  .author-sign {
    @apply text-lg mb-4 italic;
    color: var(--text-color-lighten);
  }

  .author-description {
    @apply max-w-2xl mx-auto mb-6;
    color: var(--text-color-lighten);
  }

  .social-links {
    @apply flex justify-center space-x-4;
  }

  .social-link {
    @apply flex h-12 w-12 items-center justify-center rounded-full text-2xl transition-all;
    @apply hover:scale-110 hover:shadow-lg;
    background-color: var(--card-color-lighten);
    color: var(--text-color);
  }

  .social-link:hover {
    background-color: var(--primary-color-lighten);
    color: var(--primary-color);
  }

  /* Skills Section */
  .skills-grid {
    @apply grid grid-cols-1 md:grid-cols-2 gap-6;
  }

  .skill-category {
    @apply rounded-xl p-6 shadow-sm border;
    background-color: var(--card-color);
    border-color: var(--primary-color-lighten);
  }

  .category-title {
    @apply flex items-center space-x-3 text-lg font-semibold mb-4;
    color: var(--text-color);
  }

  .category-icon {
    @apply text-2xl;
  }

  .skill-tags {
    @apply flex flex-wrap gap-2;
  }

  .skill-tag {
    @apply px-3 py-1 rounded-full text-sm font-medium;
    background-color: var(--primary-color-lighten);
    color: var(--primary-color);
  }

  /* Timeline Section */
  .timeline {
    @apply relative max-w-3xl mx-auto;
  }

  .timeline::before {
    @apply absolute left-4 top-0 bottom-0 w-0.5;
    background-color: var(--primary-color-lighten);
    content: '';
  }

  .timeline-item {
    @apply relative flex items-start space-x-6 pb-8;
  }

  .timeline-marker {
    @apply relative z-10 flex h-8 w-8 items-center justify-center rounded-full ring-4;
    background-color: var(--primary-color);
    ring-color: var(--background-color);
  }

  .timeline-content {
    @apply flex-1 rounded-lg p-6 shadow-sm border;
    background-color: var(--card-color);
    border-color: var(--primary-color-lighten);
  }

  .timeline-date {
    @apply text-sm font-medium mb-2;
    color: var(--primary-color);
  }

  .timeline-title {
    @apply text-lg font-semibold mb-2;
    color: var(--text-color);
  }

  .timeline-description {
    color: var(--text-color-lighten);
  }

  /* Contact Section */
  .contact-grid {
    @apply grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto;
  }

  .contact-item {
    @apply rounded-xl p-6 shadow-sm border text-center;
    background-color: var(--card-color);
    border-color: var(--primary-color-lighten);
  }

  .contact-icon {
    @apply text-3xl mb-4;
  }

  .contact-title {
    @apply text-lg font-semibold mb-2;
    color: var(--text-color);
  }

  .contact-link {
    @apply transition-colors;
    color: var(--primary-color);
  }

  .contact-link:hover {
    color: var(--primary-color-hover);
  }

  .contact-text {
    color: var(--text-color-lighten);
  }
</style> 