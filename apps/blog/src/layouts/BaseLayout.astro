---
import AsukaConfig from "~/asuka.config";
import BaseHead from "../components/BaseHead.astro";
---

<html lang={AsukaConfig.locale}>
  <BaseHead />
  <body>
    <slot />
  </body>
</html>

<style>
  html {
    overflow-x: clip;
    max-width: 100vw;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }
  
  body {
    @apply bg-[var(--background-color)];
    overflow-x: clip;
    max-width: 100vw;
    box-sizing: border-box;
    min-height: 100vh;
  }
  
  *, *::before, *::after {
    box-sizing: border-box;
  }
</style>
